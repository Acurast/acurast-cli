{
  "name": "@acurast/cli",
  "version": "0.0.7",
  "description": "A cli to interact with the Acurast Network.",
  "main": "dist/index.js",
  "bin": {
    "acurast": "./dist/index.js"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "npx tsc && cp ./src/util/live-code-processor.js ./dist/util/live-code-processor.js",
    "setup": "npm run build && npm i -g .",
    "test": "jest",
    "x": "npm run build && node ./dist/index.js live",
    "prettier": "npx prettier . --write"
  },
  "keywords": [
    "acurast",
    "cloud",
    "cli"
  ],
  "author": "Andreas Gassmann <andreas@andreasgassmann.ch>",
  "license": "UNLICENSED",
  "homepage": "https://www.acurast.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/acurast/acurast-cli"
  },
  "dependencies": {
    "@acurast/dapp": "^1.0.1-beta.6",
    "@inquirer/prompts": "^5.0.5",
    "@polkadot/api": "^11.2.1",
    "@polkadot/keyring": "^12.6.2",
    "@types/cli-progress": "^3.11.5",
    "ansis": "^3.2.0",
    "axios": "^1.7.2",
    "bip39": "^3.1.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "figlet": "^1.7.0",
    "form-data": "^4.0.0",
    "inquirer": "^9.2.23",
    "is-interactive": "^2.0.0",
    "listr2": "^8.2.1",
    "log-symbols": "^6.0.0",
    "needle": "^3.3.1",
    "open": "^8.4.2",
    "parse-duration": "^1.1.0",
    "stdin-discarder": "^0.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
